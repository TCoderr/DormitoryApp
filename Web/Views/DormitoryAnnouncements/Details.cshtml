@model Web.Models.DormitoryAnnouncement

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
<h3 class="display-5 pb-3 mb-3 border-bottom">Announcement Details</h3>




<table class="table table-bordered"> 
    <tbody>
        <tr>
            <td>
                <span class="font-weight-bold"> Announcement  </span>
            </td>
            <td> @Html.DisplayFor(model => model.Announcement)</td>
        </tr>
        <tr>
            <td>
                <span class="font-weight-bold">  Is Published   </span>
            </td>
            <td>

                @if (Model.IsPublished)
                { 
                    <span>YES</span>
                }
                else
                {

                    <span>NO</span>
                }
            </td>
        </tr>

        <tr>
            <td>
                <span class="font-weight-bold">  Created Date   </span>
            </td>
            <td>  
                @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm:ss") 
            </td>
        </tr>
        <tr>
            <td>
                <span class="font-weight-bold">  Modified Date   </span>
            </td>
            <td>
                @if (Model.ModifiedDate.HasValue)
                {
                    @Model.ModifiedDate.Value.ToString("dd.MM.yyyy HH:mm:ss")
                }
            </td>
        </tr>

        <tr>
            <td>
                <span class="font-weight-bold">  Published Date  </span>
            </td>
            <td>
                @if (Model.PublishedDate.HasValue)
                {
                    @Model.PublishedDate.Value.ToString("dd.MM.yyyy HH:mm:ss")
                }
            </td>
        </tr>

    </tbody>
</table>
 
<p>

    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit" , new { id = Model.Id })"><i class="fas fa-pencil-alt"></i> Edit</a>
    <a class="btn btn-outline-secondary btn-sm " href="@Url.Action("Index")">
        <i class="fas fa-chevron-left"></i>  Back to List
    </a> 
</p>
