
<!DOCTYPE html>

@using Web.Models

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dormitory App | @ViewBag.Title</title>


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
</head>
<body>
    @{
        var user = Session["User"] as User;
    }


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="/">Dormitory APP</a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">



                    <li class="nav-item">
                        @Html.ActionLink("Dormitory Announcements", "Index", "DormitoryAnnouncements", null, new { @class = "nav-link" })
                    </li>



                    @if (user.UserRole != Web.Models.User.Role.Student)
                    {
                        <li class="nav-item">@Html.ActionLink("Students", "Index", "User", null, new { @class = "nav-link" })</li>
                    }  

                    <li class="nav-item">@Html.ActionLink("Rooms", "Index", "Rooms", null, new { @class = "nav-link" })</li>




                    @if (user.UserRole != Web.Models.User.Role.Student)
                    {
                        <li class="nav-item">@Html.ActionLink("Room Applications", "Index", "RoomApplications", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Past Room Applications", "PastRoomApplications", "RoomApplications", null, new { @class = "nav-link" })</li>

                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("My Room Applications", "Index", "RoomApplications", null, new { @class = "nav-link" })</li> 
                        <li class="nav-item">@Html.ActionLink("My Past Room Applications", "StudentPastRoomApplications", "RoomApplications", null, new { @class = "nav-link" })</li> 
                    }

                    <li class="nav-item">@Html.ActionLink("My Profile Information", "Profile", "User", null, new { @class = "nav-link" })</li>



                    <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })</li>


                </ul>
            </div>
        </div>
    </nav>



    <div class="container body-content pt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dormitory App</p>
        </footer>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
